<Application
    x:Class="Text_Grab.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:Text_Grab"
    Startup="appStartup">
    <Application.Resources>
        <ResourceDictionary Source="/Styles/ButtonStyles.xaml" />
    </Application.Resources>
    <JumpList.JumpList>
        <JumpList>
            <JumpTask
                Title="Settings"
                Arguments="Settings"
                Description="Open Text Grab Settings" />
            <JumpTask
                Title="Edit Text"
                Arguments="EditText"
                Description="Open Text Edit Window" />
            <JumpTask
                Title="Grab Frame"
                Arguments="GrabFrame"
                Description="Open a Grab Frame to search and select text" />
            <JumpTask
                Title="Full Screen"
                Arguments="Fullscreen"
                Description="Full screen overlay to select text" />
        </JumpList>
    </JumpList.JumpList>
</Application>
