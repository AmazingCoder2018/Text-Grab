<Window x:Class="Text_Grab.ManipulateTextWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Text_Grab"
        mc:Ignorable="d"
        Title="Edit Text" Height="450" Width="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <TextBox Background="#1E1E1E" Foreground="White" FontSize="16" x:Name="PassedTextControl" Text="{Binding CopiedText, Mode=OneWay}"/>

        <StackPanel Background="#444444" Grid.Row="1" Orientation="Horizontal" >
            <Button Width="120" Background="Orange" Margin="10,10,0,10" Padding="6" x:Name="CopyCloseBTN" Content="Copy And Close" />
            <Button Width="120"  Margin="10" Padding="6" x:Name="SaveBTN" Content="Save to File..." />
        </StackPanel>
    </Grid>
</Window>
