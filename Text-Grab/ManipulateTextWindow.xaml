<Window x:Class="Text_Grab.ManipulateTextWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Text_Grab"
        mc:Ignorable="d"
        Title="Edit Text" Height="450" Width="800">
    <Grid>
        <TextBox Background="#1E1E1E" Foreground="White" FontSize="16" x:Name="PassedTextControl" Text="{Binding CopiedText, Mode=OneWay}"/>
    </Grid>
</Window>
