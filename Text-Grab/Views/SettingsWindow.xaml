<Window
    x:Class="Text_Grab.SettingsWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:controls="clr-namespace:Text_Grab.Controls"
    xmlns:local="clr-namespace:Text_Grab"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Text Grab"
    Width="480"
    Height="500"
    Background="{StaticResource DarkControlBackground}"
    Loaded="Window_Loaded"
    mc:Ignorable="d">
    <Window.Resources>
        <Style x:Key="labelText" TargetType="CheckBox">
            <Setter Property="Foreground" Value="White" />
        </Style>
    </Window.Resources>
    <Border Padding="26,8">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>
            <StackPanel Orientation="Vertical">

                <StackPanel Orientation="Horizontal">
                    <!--  Heading  -->
                    <TextBlock
                        FontSize="24"
                        Foreground="White"
                        Text="Settings" />

                    <!--  Version Text  -->
                    <TextBlock
                        Margin="10,0,0,0"
                        VerticalAlignment="Bottom"
                        Foreground="White"
                        Text="v2.1" />
                </StackPanel>

                <!--  Show Toast on success  -->
                <StackPanel Margin="0,12,0,0" Orientation="Horizontal">
                    <CheckBox
                        Name="ShowToastCheckBox"
                        Content="Show Toast when text is copied. Opens window to display and edit text."
                        Style="{StaticResource labelText}" />
                </StackPanel>

                <!--  default launch  -->
                <TextBlock
                    Margin="0,16,0,4"
                    FontSize="14"
                    Foreground="White"
                    Text="Default Launch Window" />
                <RadioButton
                    x:Name="FullScreenRDBTN"
                    Content="Full Screen"
                    Foreground="White"
                    GroupName="DefaultLaunch" />
                <RadioButton
                    x:Name="GrabFrameRDBTN"
                    Content="Grab Frame"
                    Foreground="White"
                    GroupName="DefaultLaunch" />
                <RadioButton
                    x:Name="EditTextRDBTN"
                    Content="Edit Text"
                    Foreground="White"
                    GroupName="DefaultLaunch" />

                <!--  Pick Language  -->

                <!--    -->
                <CheckBox
                    Name="ErrorCorrectBox"
                    Margin="0,16,0,0"
                    Content="Try to correct common confusions between numbers and letters"
                    Style="{StaticResource labelText}" />
            </StackPanel>
            <StackPanel Orientation="Horizontal" Grid.Row="1">
                <controls:CollapsibleButton 
                    x:Name="CloseBTN" 
                    Click="CloseBTN_Click"
                    SymbolText=""
                    ButtonText="Cancel" />
                <controls:CollapsibleButton 
                    x:Name="SaveBTN" 
                    Click="SaveBTN_Click"
                    SymbolText=""
                    Background="DarkGreen"
                    ButtonText="Save and Close" />
            </StackPanel>
            <TextBlock Grid.Row="2" Foreground="White">
                What do you want to see here? Submit an issue on GitHub<LineBreak />
                <Hyperlink
                    Foreground="DeepSkyBlue"
                    NavigateUri="https://github.com/TheJoeFin/Text-Grab/issues"
                    RequestNavigate="Hyperlink_RequestNavigate">
                    https://github.com/TheJoeFin/Text-Grab/issues
                </Hyperlink>
            </TextBlock>
        </Grid>
    </Border>
</Window>
