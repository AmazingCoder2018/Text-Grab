<Window
    x:Class="Text_Grab.Windows.Other.RegionSelector"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:n="clr-namespace:Text_Grab.Controls"
    xmlns:util="clr-namespace:Text_Grab.Util"
    x:Name="GhostWindow"
    Title="Text Grab"
    Width="Auto"
    Height="Auto"
    AllowsTransparency="True"
    Background="Transparent"
    ResizeMode="NoResize"
    ShowInTaskbar="False"
    SnapsToDevicePixels="True"
    Topmost="True"
    UseLayoutRounding="True"
    WindowStyle="None">

    <n:SelectControl
        x:Name="SelectControl"
        HorizontalAlignment="Stretch"
        VerticalAlignment="Stretch"
        AnimateBorder="{Binding Source={x:Static util:UserSettings.All}, Mode=OneWay}"
        Focusable="True"
        MouseHovering="SelectControl_MouseHovering"
        SelectionAccepted="SelectControl_SelectionAccepted"
        SelectionCanceled="SelectControl_SelectionCanceled"
        SelectionChanged="SelectControl_SelectionChanged" />
</Window>