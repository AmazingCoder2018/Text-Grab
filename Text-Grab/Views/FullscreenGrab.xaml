<Window
    x:Class="Text_Grab.Views.FullscreenGrab"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Text_Grab"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Text Grab"
    Width="800"
    Height="450"
    AllowsTransparency="True"
    Background="Transparent"
    Loaded="Window_Loaded"
    ResizeMode="NoResize"
    Topmost="True"
    WindowStyle="None"
    mc:Ignorable="d">
    <Grid>
        <Viewbox>
            <Image x:Name="BackgroundImage" Stretch="UniformToFill" />
        </Viewbox>
        <Canvas
            Name="RegionClickCanvas"
            Cursor="Cross"
            MouseDown="RegionClickCanvas_MouseDown"
            MouseMove="RegionClickCanvas_MouseMove"
            MouseUp="RegionClickCanvas_MouseUp">
            <Canvas.Clip>
                <CombinedGeometry GeometryCombineMode="Exclude">
                    <CombinedGeometry.Geometry1>
                        <RectangleGeometry x:Name="FullWindow" />
                    </CombinedGeometry.Geometry1>
                    <CombinedGeometry.Geometry2>
                        <RectangleGeometry x:Name="clippingGeometry" />
                    </CombinedGeometry.Geometry2>
                </CombinedGeometry>
            </Canvas.Clip>
            <Canvas.Background>
                <SolidColorBrush
                    x:Name="BackgroundBrush"
                    Opacity="0"
                    Color="Beige" />
            </Canvas.Background>
            <Canvas.ContextMenu>
                <ContextMenu>
                    <MenuItem
                        Name="SingleLineMenuItem"
                        Header="Make Result Text Single Line"
                        Click="SingleLineMenuItem_Click"
                        IsCheckable="True" />
                    <MenuItem
                        Name="FreezeMenuItem"
                        Click="FreezeMenuItem_Click"
                        Header="Freeze" />
                    <Separator />
                    <MenuItem
                        Name="SettingsMenuItem"
                        Click="SettingsMenuItem_Click"
                        Header="Settings" />
                    <MenuItem
                        Name="NewGrabFrameMenuItem"
                        Click="NewGrabFrameMenuItem_Click"
                        Header="Place Grab Frame"
                        IsCheckable="True" />
                    <MenuItem
                        Name="NewEditTextMenuItem"
                        Click="NewEditTextMenuItem_Click"
                        Header="Edit Text Window" />
                    <Separator />
                    <MenuItem
                        Name="CancelMenuItem"
                        Click="CancelMenuItem_Click"
                        Header="Cancel" />
                </ContextMenu>
            </Canvas.ContextMenu>
        </Canvas>
        <StackPanel 
            Margin="0"
            Orientation="Horizontal"
            VerticalAlignment="Top" 
            Background="{StaticResource DarkControlBackground}"
            HorizontalAlignment="Center">
            <ToggleButton 
                Padding="12" 
                Margin="4,0,0,4"
                Style="{StaticResource ToggleSymbolButton}">
                <TextBlock
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Text=""
                    FontSize="20"
                    ToolTip="Freeze what is on screens"
                    FontFamily="Segoe MDL2 Assets" />
            </ToggleButton>
            <ToggleButton 
                Padding="12" 
                Margin="0,0,0,4"
                IsChecked="{Binding IsChecked, ElementName=SingleLineMenuItem, Mode=TwoWay}"
                Style="{StaticResource ToggleSymbolButton}">
                <TextBlock
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Text=""
                    FontSize="20"
                    ToolTip="(S) Make result a single line"
                    FontFamily="Segoe MDL2 Assets" />
            </ToggleButton>

            <ToggleButton 
                Padding="12" 
                Margin="4,0,0,4"
                IsChecked="{Binding IsChecked, ElementName=NewGrabFrameMenuItem, Mode=TwoWay}"
                Style="{StaticResource ToggleSymbolButton}">
                <TextBlock
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Text=""
                    FontSize="20"
                    ToolTip="(G) Place a Grab Frame"
                    FontFamily="Segoe MDL2 Assets" />
            </ToggleButton>
            <ToggleButton 
                Padding="12" 
                Margin="0,0,0,4"
                Style="{StaticResource ToggleSymbolButton}">
                <TextBlock
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Text=""
                    FontSize="20"
                    ToolTip="(E) Put result in Edit Text Window"
                    FontFamily="Segoe MDL2 Assets" />
            </ToggleButton>
            <Button 
                Padding="12" 
                Width="48"
                Margin="0,0,0,4" 
                Background="#444444"
                Click="SettingsMenuItem_Click"
                Style="{StaticResource SymbolButton}">
                <TextBlock
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Text=""
                    FontSize="20"
                    ToolTip="Settings"
                    FontFamily="Segoe MDL2 Assets" />
            </Button>
            <Button 
                Padding="12" 
                Margin="4,0,4,4" 
                Width="48"
                Click="CancelMenuItem_Click"
                Style="{StaticResource SymbolButton}">
                <TextBlock
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Foreground="White"
                    Text=""
                    FontSize="20"
                    ToolTip="(Esc) Cancel"
                    FontFamily="Segoe MDL2 Assets" />
            </Button>
        </StackPanel>
    </Grid>
</Window>
