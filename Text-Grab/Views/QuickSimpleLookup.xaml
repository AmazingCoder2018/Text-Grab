<Window
    x:Class="Text_Grab.Views.QuickSimpleLookup"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Text_Grab.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Quick Simple Lookup"
    Width="800"
    Height="400"
    Background="{StaticResource DarkBackground}"
    Closing="Window_Closing"
    Loaded="Window_Loaded"
    PreviewKeyDown="SearchBox_PreviewKeyDown"
    Topmost="True"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>

            <TextBox
                x:Name="SearchBox"
                Grid.Column="0"
                Padding="8"
                VerticalAlignment="Center"
                Background="{StaticResource DarkControlBackground}"
                FontSize="16"
                Foreground="White"
                TextChanged="SearchBox_TextChanged" />
            <Button
                x:Name="ParseBTN"
                Grid.Column="1"
                Click="ParseBTN_Click"
                Content="Parse 📋" />
        </Grid>
        <DataGrid
            x:Name="MainDataGrid"
            Grid.Row="1"
            AlternatingRowBackground="{StaticResource DarkBackground}"
            AutoGenerateColumns="False"
            Background="Transparent"
            CanUserAddRows="True"
            CanUserDeleteRows="True"
            CanUserResizeRows="True"
            CellStyle="{DynamicResource DataGridCellStyleDark}"
            ColumnHeaderStyle="{DynamicResource DataGridColumnHeaderStyleDark}"
            ItemsSource="{Binding Source=ItemsDictionary}"
            MinRowHeight="14"
            RowBackground="Transparent"
            RowStyle="{DynamicResource DataGridRowStyleDark}">
            <DataGrid.Columns>
                <DataGridTemplateColumn Width="*">
                    <DataGridTemplateColumn.Header>
                        <TextBlock
                            Padding="6"
                            VerticalAlignment="Center"
                            Background="{StaticResource DarkControlBackground}"
                            FontSize="14"
                            Foreground="White"
                            Text="Short Text" />
                    </DataGridTemplateColumn.Header>
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock
                                Padding="6"
                                VerticalAlignment="Center"
                                FontSize="14"
                                Foreground="White"
                                Text="{Binding shortValue}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                    <DataGridTemplateColumn.CellEditingTemplate>
                        <DataTemplate>
                            <TextBox
                                Padding="6"
                                VerticalAlignment="Center"
                                Background="{StaticResource Teal}"
                                FontSize="14"
                                Foreground="Black"
                                Text="{Binding shortValue}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellEditingTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn Width="3*">
                    <DataGridTemplateColumn.Header>
                        <TextBlock
                            Padding="6"
                            VerticalAlignment="Center"
                            Background="{StaticResource DarkControlBackground}"
                            FontSize="14"
                            Foreground="White"
                            Text="Right Value" />
                    </DataGridTemplateColumn.Header>
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock
                                Padding="6"
                                VerticalAlignment="Center"
                                FontSize="14"
                                Foreground="White"
                                Text="{Binding longValue}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                    <DataGridTemplateColumn.CellEditingTemplate>
                        <DataTemplate>
                            <TextBox
                                Padding="6"
                                VerticalAlignment="Center"
                                Background="{StaticResource Teal}"
                                FontSize="14"
                                Foreground="Black"
                                Text="{Binding longValue}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellEditingTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <TextBlock
            x:Name="RowCountTextBlock"
            Grid.Row="2"
            Padding="2"
            HorizontalAlignment="Center"
            Foreground="White"
            Text="0 Rows" />
    </Grid>
</Window>
