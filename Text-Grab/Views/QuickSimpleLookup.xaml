<Window
    x:Class="Text_Grab.Views.QuickSimpleLookup"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Text_Grab.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Quick Simple Lookup"
    Width="400"
    Height="400"
    Background="{StaticResource DarkBackground}"
    Loaded="Window_Loaded"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TextBox
            x:Name="SearchBox"
            Grid.Row="0"
            TextChanged="SearchBox_TextChanged" />
        <DataGrid
            x:Name="MainDataGrid"
            Grid.Row="1"
            AutoGenerateColumns="False"
            CanUserAddRows="True"
            CanUserDeleteRows="True"
            CanUserResizeRows="True"
            ItemsSource="{Binding Source=ItemsDictionary}">
            <DataGrid.Columns>
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding shortValue}"
                    Header="Left Value" />
                <DataGridTextColumn
                    Width="4*"
                    Binding="{Binding longValue}"
                    Header="Right Value" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
