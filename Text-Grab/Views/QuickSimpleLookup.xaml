<Window
    x:Class="Text_Grab.Views.QuickSimpleLookup"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Text_Grab.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Quick Simple Lookup"
    Width="800"
    Height="400"
    Background="{StaticResource DarkBackground}"
    Closing="Window_Closing"
    Loaded="Window_Loaded"
    Topmost="True"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>

            <TextBox
                x:Name="SearchBox"
                Grid.Column="0"
                Height="28"
                Padding="4"
                VerticalAlignment="Center"
                PreviewKeyDown="SearchBox_PreviewKeyDown"
                TextChanged="SearchBox_TextChanged" />
            <Button
                x:Name="ParseBTN"
                Grid.Column="1"
                Click="ParseBTN_Click"
                Content="Parse 📋" />
        </Grid>
        <DataGrid
            x:Name="MainDataGrid"
            Grid.Row="1"
            AutoGenerateColumns="False"
            Background="Transparent"
            CanUserAddRows="True"
            CanUserDeleteRows="True"
            CanUserResizeRows="True"
            ItemsSource="{Binding Source=ItemsDictionary}"
            MinRowHeight="14"
            RowBackground="Transparent">
            <DataGrid.Columns>
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding shortValue}"
                    Foreground="White"
                    Header="Left Value" />
                <DataGridTextColumn
                    Width="3*"
                    Binding="{Binding longValue}"
                    Foreground="White"
                    Header="Right Value" />
            </DataGrid.Columns>
        </DataGrid>

        <TextBlock
            x:Name="RowCountTextBlock"
            Grid.Row="2"
            Padding="2"
            HorizontalAlignment="Center"
            Foreground="White"
            Text="0 Rows" />
    </Grid>
</Window>
