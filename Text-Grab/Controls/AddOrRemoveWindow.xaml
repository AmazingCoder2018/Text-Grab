<Window
    x:Class="Text_Grab.Controls.AddOrRemoveWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Text_Grab.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Add or remove text on each line"
    Width="330"
    Height="320"
    Background="{StaticResource DarkBackground}"
    KeyUp="Window_KeyUp"
    Loaded="Window_Loaded"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterOwner"
    mc:Ignorable="d">
    <Window.CommandBindings>
        <CommandBinding
            CanExecute="AddRemove_CanExecute"
            Command="{x:Static local:AddOrRemoveWindow.AddRemoveCmd}"
            Executed="AddRemove_Executed" />
        <CommandBinding
            CanExecute="AddRemove_CanExecute"
            Command="{x:Static local:AddOrRemoveWindow.ApplyCmd}"
            Executed="Apply_Executed" />
    </Window.CommandBindings>
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <RadioButton
                x:Name="AddRadioButton"
                Grid.Column="0"
                Margin="0,0,12,0"
                VerticalContentAlignment="Center"
                GroupName="AddOrRemoveRDBTNs"
                IsChecked="True">
                <TextBlock Style="{StaticResource TextBodyNormal}">
                    Add
                </TextBlock>
            </RadioButton>
            <RadioButton
                x:Name="RemoveRadioButton"
                Grid.Column="1"
                Margin="0,0,12,0"
                VerticalContentAlignment="Center"
                Checked="RemoveRadioButton_Checked"
                GroupName="AddOrRemoveRDBTNs"
                IsChecked="False"
                Unchecked="RemoveRadioButton_Checked">
                <TextBlock Style="{StaticResource TextBodyNormal}">
                    Remove
                </TextBlock>
            </RadioButton>
            <RadioButton
                x:Name="LimitRadioButton"
                Grid.Column="2"
                Margin="0,0,12,0"
                VerticalContentAlignment="Center"
                Checked="RemoveRadioButton_Checked"
                GroupName="AddOrRemoveRDBTNs"
                IsChecked="False"
                Unchecked="RemoveRadioButton_Checked">
                <TextBlock Style="{StaticResource TextBodyNormal}">
                    Limit
                </TextBlock>
            </RadioButton>
        </Grid>

        <StackPanel Grid.Row="1" Orientation="Horizontal">
            <TextBlock VerticalAlignment="Center" Style="{StaticResource TextBodyNormal}">
                From The:
            </TextBlock>
            <RadioButton
                x:Name="BeginningRDBTN"
                Grid.Row="1"
                Margin="12,0,12,0"
                VerticalContentAlignment="Center"
                GroupName="PlaceRDBTNs"
                IsChecked="True">
                <TextBlock Style="{StaticResource TextBodyNormal}">
                    Beginning
                </TextBlock>
            </RadioButton>
            <!--<RadioButton
                x:Name="MiddleRDBTN"
                Grid.Row="1"
                Content="Middle"
                GroupName="PlaceRDBTNs"
                IsChecked="False" />-->
            <RadioButton
                x:Name="EndRDBTN"
                Grid.Row="1"
                VerticalContentAlignment="Center"
                GroupName="PlaceRDBTNs"
                IsChecked="False">
                <TextBlock Style="{StaticResource TextBodyNormal}">
                    End
                </TextBlock>
            </RadioButton>
        </StackPanel>

        <StackPanel
            Grid.Row="2"
            Orientation="Horizontal">
            <TextBlock
                Width="184"
                VerticalAlignment="Center"
                Style="{StaticResource TextBodyNormal}"
                Text="Number of characters" />
            <TextBox
                x:Name="LengthTextBox"
                Width="50"
                IsEnabled="False"
                TextChanged="InputTextBox_TextChanged" />
        </StackPanel>

        <StackPanel Grid.Row="3" Orientation="Horizontal">
            <TextBlock
                Width="106"
                VerticalAlignment="Center"
                Style="{StaticResource TextBodyNormal}"
                Text="Text to add" />
            <TextBox
                x:Name="TextToAddTextBox"
                Width="128"
                AcceptsTab="True"
                TextChanged="InputTextBox_TextChanged" />
        </StackPanel>
        <StackPanel
            Grid.Row="4"
            HorizontalAlignment="Center"
            VerticalAlignment="Bottom"
            Orientation="Horizontal">
            <local:CollapsibleButton
                x:Name="ApplyButton"
                Grid.Row="7"
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom"
                ButtonText="Apply"
                Command="{x:Static local:AddOrRemoveWindow.ApplyCmd}"
                IsSymbol="True"
                SymbolText="" />
            <local:CollapsibleButton
                x:Name="DoneButton"
                Grid.Row="7"
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom"
                ButtonText="Done"
                Command="{x:Static local:AddOrRemoveWindow.AddRemoveCmd}"
                SymbolText="" />
        </StackPanel>
    </Grid>
</Window>
