<Window
    x:Class="Text_Grab.Controls.AddOrRemoveWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Text_Grab.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Add Or Remove At"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />

        </Grid.RowDefinitions>
        <TextBlock Text="Add or remove text on each line" />

        <StackPanel Grid.Row="1" Orientation="Horizontal">
            <RadioButton
                x:Name="AddRadioButton"
                Grid.Row="1"
                Content="Add"
                GroupName="AddOrRemoveRDBTNs"
                IsChecked="True" />
            <RadioButton
                x:Name="RemoveRadioButton"
                Grid.Row="1"
                Content="Remove"
                GroupName="AddOrRemoveRDBTNs"
                IsChecked="False" />
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal">
            <TextBlock>
                From The:
            </TextBlock>
            <RadioButton
                x:Name="BeginningRDBTN"
                Grid.Row="1"
                Content="Beginning"
                GroupName="PlaceRDBTNs"
                IsChecked="True" />
            <!--<RadioButton
                x:Name="MiddleRDBTN"
                Grid.Row="1"
                Content="Middle"
                GroupName="PlaceRDBTNs"
                IsChecked="False" />-->
            <RadioButton
                x:Name="EndRDBTN"
                Grid.Row="1"
                Content="End"
                GroupName="PlaceRDBTNs"
                IsChecked="False" />
        </StackPanel>

        <StackPanel Grid.Row="3" Orientation="Horizontal">
            <TextBlock Width="128" Text="Number of characters" />
            <TextBox x:Name="LengthTextBox" Width="50" />
        </StackPanel>

        <StackPanel Grid.Row="4" Orientation="Horizontal">
            <TextBlock Width="128" Text="Text to add" />
            <TextBox x:Name="TextToAddTextBox" Width="128" />
        </StackPanel>
    </Grid>
</Window>
