<Window x:Class="Text_Grab.Controls.FindAndReplaceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Text_Grab.Controls"
        mc:Ignorable="d"
        Title="FindAndReplaceWindow" Height="450" Width="800">
    <StackPanel Orientation="Vertical">
        <TextBox x:Name="FindTextBox" TextChanged="FindTextBox_TextChanged" />

        <TextBlock Text="Matches" FontSize="18" />
        <TextBlock Text="" x:Name="MatchesResults" />
    </StackPanel>
</Window>
