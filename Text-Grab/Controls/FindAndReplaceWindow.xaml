<Window
    x:Class="Text_Grab.Controls.FindAndReplaceWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Text_Grab.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Find and Replace"
    Width="480"
    Height="560"
    Background="{StaticResource DarkBackground}"
    KeyUp="Window_KeyUp"
    Loaded="FindAndReplacedLoaded"
    mc:Ignorable="d">
    <Window.CommandBindings>
        <CommandBinding
            CanExecute="TextSearch_CanExecute"
            Command="{x:Static local:FindAndReplaceWindow.TextSearchCmd}"
            Executed="TextSearch_Executed" />
        <CommandBinding
            CanExecute="Replace_CanExecute"
            Command="{x:Static local:FindAndReplaceWindow.ReplaceOneCmd}"
            Executed="Replace_Executed" />
        <CommandBinding
            CanExecute="Replace_CanExecute"
            Command="{x:Static local:FindAndReplaceWindow.ReplaceAllCmd}"
            Executed="ReplaceAll_Executed" />
    </Window.CommandBindings>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>
            <ToggleButton
                x:Name="MoreOptionsToggleButton"
                Width="32"
                Background="Transparent"
                BorderBrush="Transparent"
                Click="MoreOptionsToggleButton_Click"
                Content="▼"
                Foreground="White" />

            <TextBox
                x:Name="FindTextBox"
                Grid.Column="1"
                Height="28"
                Margin="6,6,6,0"
                VerticalContentAlignment="Center"
                KeyUp="FindTextBox_KeyUp" />
            <Button
                x:Name="FindButton"
                Grid.Row="0"
                Grid.Column="2"
                Width="80"
                Margin="0,6,6,0"
                Padding="4"
                Command="{x:Static local:FindAndReplaceWindow.TextSearchCmd}"
                Content="Find" />

            <TextBox
                x:Name="ReplaceTextBox"
                Grid.Row="1"
                Grid.Column="1"
                Height="28"
                Margin="6,6,6,0"
                VerticalContentAlignment="Center"
                Visibility="Collapsed" />
            <Button
                x:Name="ReplaceButton"
                Grid.Row="1"
                Grid.Column="2"
                Margin="0,6,6,0"
                Padding="4"
                Command="{x:Static local:FindAndReplaceWindow.ReplaceOneCmd}"
                Content="Replace"
                Visibility="Collapsed" />

            <Button
                x:Name="ReplaceAllButton"
                Grid.Row="2"
                Grid.Column="2"
                Margin="0,6,6,0"
                Padding="4"
                Command="{x:Static local:FindAndReplaceWindow.ReplaceAllCmd}"
                Content="Replace All"
                Visibility="Collapsed" />

            <StackPanel
                x:Name="MoreOptionsHozStack"
                Grid.Row="2"
                Grid.Column="1"
                Grid.ColumnSpan="2"
                Orientation="Horizontal"
                Visibility="Collapsed">
                <CheckBox
                    x:Name="ExactMatchCheckBox"
                    Margin="6"
                    VerticalAlignment="Center"
                    Checked="OptionsChangedRefresh"
                    Content="Match Exactly"
                    Foreground="White" />

                <CheckBox
                    x:Name="UsePaternCheckBox"
                    Margin="6"
                    VerticalAlignment="Center"
                    Content="Regex"
                    Foreground="White" />

                <Button
                    x:Name="ExtractSimplePattern"
                    Margin="0,6,6,0"
                    Click="ExtractSimplePattern_Click">
                    <TextBlock Margin="4" Text="Extract Pattern" />
                </Button>
            </StackPanel>

        </Grid>

        <TextBlock
            x:Name="MatchesText"
            Grid.Row="1"
            Margin="6"
            FontSize="18"
            Foreground="{StaticResource Teal}"
            Text="Matches" />

        <Border Grid.Row="2" Background="{StaticResource DarkControlBackground}">
            <ListView
                x:Name="ResultsListView"
                Grid.Row="2"
                Background="Transparent"
                Foreground="White"
                ScrollViewer.CanContentScroll="True"
                ScrollViewer.VerticalScrollBarVisibility="Auto"
                SelectionChanged="ResultsListView_SelectionChanged"
                Style="{DynamicResource ListViewDarkStyle}">
                No Matches
            </ListView>
        </Border>
    </Grid>
</Window>
