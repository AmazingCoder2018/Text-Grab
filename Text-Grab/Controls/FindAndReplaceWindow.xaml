<Window
    x:Class="Text_Grab.Controls.FindAndReplaceWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Text_Grab.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Find and Replace"
    Width="480"
    Loaded="FindAndReplacedLoaded"
    Height="560"
    Background="{StaticResource DarkBackground}"
    mc:Ignorable="d">
    <Window.CommandBindings>
        <CommandBinding
            CanExecute="TextSearch_CanExecute"
            Command="{x:Static local:FindAndReplaceWindow.TextSearchCmd}"
            Executed="TextSearch_Executed" />
        <CommandBinding
            CanExecute="Replace_CanExecute"
            Command="{x:Static local:FindAndReplaceWindow.ReplaceOneCmd}"
            Executed="Replace_Executed" />
        <CommandBinding
            CanExecute="Replace_CanExecute"
            Command="{x:Static local:FindAndReplaceWindow.ReplaceAllCmd}"
            Executed="ReplaceAll_Executed" />
    </Window.CommandBindings>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>
            <ToggleButton 
                x:Name="MoreOptionsToggleButton" 
                Content="▼" 
                Width="32"  
                Click="MoreOptionsToggleButton_Click"
                Background="Transparent" 
                BorderBrush="Transparent" />

            <TextBox
                x:Name="FindTextBox" 
                KeyUp="FindTextBox_KeyUp"
                Height="28"
                Margin="6,6,6,0" Grid.Column="1" 
                VerticalContentAlignment="Center" />
            <Button 
                x:Name="FindButton"
                Content="Find" 
                Grid.Row="0"
                Command="{x:Static local:FindAndReplaceWindow.TextSearchCmd}"
                Grid.Column="2" Width="80"
                Margin="0,6,6,0" 
                Padding="4"/>

            <TextBox 
                x:Name="ReplaceTextBox" 
                Visibility="Collapsed"
                Margin="6,6,6,0"  
                Height="28"
                VerticalContentAlignment="Center"
                Grid.Row="1" 
                Grid.Column="1" />
            <Button 
                x:Name="ReplaceButton"
                Visibility="Collapsed"
                Command="{x:Static local:FindAndReplaceWindow.ReplaceOneCmd}"
                Content="Replace" 
                Grid.Row="1" 
                Grid.Column="2" 
                Margin="0,6,6,0" 
                Padding="4"/>

            <Button 
                x:Name="ReplaceAllButton" 
                Content="Replace All" 
                Grid.Row="2" 
                Command="{x:Static local:FindAndReplaceWindow.ReplaceAllCmd}"
                Visibility="Collapsed"
                Grid.Column="2" 
                Margin="0,6,6,0" 
                Padding="4"/>

            <StackPanel  
                x:Name="MoreOptionsHozStack"
                Orientation="Horizontal" 
                Visibility="Collapsed"
                Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2">
                <CheckBox
                    x:Name="ExactMatchCheckBox" 
                    Content="Match Exactly" 
                    Checked="OptionsChangedRefresh"
                    Foreground="White" 
                    VerticalAlignment="Center" 
                    Margin="6"/>

                <CheckBox
                    x:Name="UsePaternCheckBox" 
                    Content="Regex" 
                    Foreground="White" 
                    VerticalAlignment="Center" 
                    Margin="6"/>

                <Button 
                    x:Name="ExtractSimplePattern" 
                    Margin="0,6,6,0"
                    Click="ExtractSimplePattern_Click" >
                    <TextBlock Text="Extract Pattern"  Margin="4"/>
                </Button>
            </StackPanel>
            
        </Grid>

        <TextBlock
            Grid.Row="1"
            x:Name="MatchesText"
            Margin="6"
            FontSize="18"
            Foreground="{StaticResource Teal}"
            Text="Matches" />

        <Border Grid.Row="2" Background="{StaticResource DarkControlBackground}">
            <ListView
                x:Name="ResultsListView"
                Grid.Row="2"
                Background="Transparent"
                Foreground="White"
                ScrollViewer.CanContentScroll="True"
                ScrollViewer.VerticalScrollBarVisibility="Auto"
                SelectionChanged="ResultsListView_SelectionChanged"
                Style="{DynamicResource ListViewDarkStyle}">
                No Matches
            </ListView>
        </Border>
    </Grid>
</Window>
