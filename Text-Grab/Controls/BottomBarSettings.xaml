<Window
    x:Class="Text_Grab.Controls.BottomBarSettings"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Text_Grab.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Add Or Remove At"
    Width="900"
    Height="400"
    Background="{StaticResource DarkBackground}"
    WindowStartupLocation="CenterOwner"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>

        <ListView 
            x:Name="LeftListBox"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            ItemsSource="{Binding ButtonsInLeftList}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Icon" Width="40">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Grid.Column="0" FontFamily="Segoe MDL2 Assets" Text="{Binding SymbolText}" Margin="0,0,8,0"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="Icon Mode" Width="64">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <CheckBox Grid.Column="2" IsChecked="{Binding IsSymbol}" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="Button Text" Width="260">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Grid.Column="1" Text="{Binding ButtonText}" Margin="0,0,8,0"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
        <StackPanel Grid.Column="1" Orientation="Vertical" VerticalAlignment="Center">
            <Button 
                x:Name="MoveRightButton"
                Padding="8"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Click="MoveRightButton_Click">
                <TextBlock Text="▷" FontSize="18"/>
            </Button>
            <Button 
                x:Name="MoveLeftButton"
                Padding="8"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Click="MoveLeftButton_Click">
                <TextBlock Text="◁" FontSize="18" />
            </Button>
        </StackPanel>
        <ListView 
            x:Name="RightListBox"
            Grid.Column="2"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            ItemsSource="{Binding ButtonsInRightList}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Icon" Width="40">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Grid.Column="0" FontFamily="Segoe MDL2 Assets" Text="{Binding SymbolText}" Margin="0,0,8,0"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="Icon Mode" Width="64">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <CheckBox Grid.Column="2" IsChecked="{Binding IsSymbol}" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="Button Text" Width="260">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Grid.Column="1" Text="{Binding ButtonText}" Margin="0,0,8,0"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>

        <StackPanel
            Grid.Row="1"
            Grid.ColumnSpan="3"
            Margin="0,12,0,6"
            HorizontalAlignment="Center"
            Orientation="Horizontal">
            <local:CollapsibleButton
                x:Name="CloseBTN"
                ButtonText="Cancel"
                Click="CloseBTN_Click"
                SymbolText="" />
            <local:CollapsibleButton
                x:Name="SaveBTN"
                Background="DarkGreen"
                ButtonText="Save and Close"
                Click="SaveBTN_Click"
                SymbolText="" />
        </StackPanel>
    </Grid>
</Window>
