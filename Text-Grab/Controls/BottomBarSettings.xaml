<Window
    x:Class="Text_Grab.Controls.BottomBarSettings"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Text_Grab.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Bottom Bar Settings"
    Width="900"
    Height="400"
    Background="{StaticResource DarkBackground}"
    WindowStartupLocation="CenterOwner"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>

        <ListView 
            x:Name="LeftListBox"
            HorizontalAlignment="Left"
            Background="{StaticResource DarkControlBackground}"
            VerticalAlignment="Top"
            Margin="8"
            ItemsSource="{Binding ButtonsInLeftList}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Icon" Width="40">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Style="{StaticResource TextBodyNormal}" Grid.Column="0" FontFamily="Segoe MDL2 Assets" Text="{Binding SymbolText}" Margin="0,0,8,0"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="Icon Mode" Width="72">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <CheckBox HorizontalAlignment="Center" Grid.Column="2" IsChecked="{Binding IsSymbol}" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="Button Text" Width="252">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Style="{StaticResource TextBodyNormal}" Grid.Column="1" Text="{Binding ButtonText}" Margin="0,0,8,0"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
        <StackPanel Grid.Column="1" Orientation="Vertical" VerticalAlignment="Center">
            <local:CollapsibleButton 
                x:Name="MoveRightButton"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                ButtonText="Add"
                IsSymbol="True"
                SymbolText=""
                Click="MoveRightButton_Click" />
            <local:CollapsibleButton 
                x:Name="MoveLeftButton"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                ButtonText="Remove"
                SymbolText=""
                IsSymbol="True"
                Click="MoveLeftButton_Click" />
        </StackPanel>
        <StackPanel Grid.Column="2">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <local:CollapsibleButton 
                    x:Name="MoveUpButton"
                    ButtonText="Move Up"
                    SymbolText=""
                    Click="MoveUpButton_Click" />
                <local:CollapsibleButton 
                    x:Name="MoveDownButton"
                    ButtonText="Move Down"
                    SymbolText=""
                    Click="MoveDownButton_Click" />
            </StackPanel>
            <ListView 
                x:Name="RightListBox"
                Background="{StaticResource DarkControlBackground}"
                Margin="8"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                ItemsSource="{Binding ButtonsInRightList}">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Icon" Width="40">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Style="{StaticResource TextBodyNormal}" Grid.Column="0" FontFamily="Segoe MDL2 Assets" Text="{Binding SymbolText}" Margin="0,0,8,0"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="Icon Mode" Width="72">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <CheckBox HorizontalAlignment="Center" Grid.Column="2" IsChecked="{Binding IsSymbol}" />
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="Button Text" Width="252">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Style="{StaticResource TextBodyNormal}" Grid.Column="1" Text="{Binding ButtonText}" Margin="0,0,8,0"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>
        </StackPanel>

        <StackPanel
            Grid.Row="1"
            Grid.ColumnSpan="3"
            Margin="0,12,0,6"
            HorizontalAlignment="Center"
            Orientation="Horizontal">
            <local:CollapsibleButton
                x:Name="CloseBTN"
                ButtonText="Cancel"
                Click="CloseBTN_Click"
                SymbolText="" />
            <local:CollapsibleButton
                x:Name="SaveBTN"
                Background="DarkGreen"
                ButtonText="Save and Close"
                Click="SaveBTN_Click"
                SymbolText="" />
        </StackPanel>
    </Grid>
</Window>
