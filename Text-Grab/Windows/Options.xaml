<Window
    x:Class="Text_Grab.Windows.Options"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:c="clr-namespace:Text_Grab.Util.Converters"
    xmlns:n="clr-namespace:Text_Grab.Controls"
    xmlns:u="clr-namespace:Text_Grab.Util"
    Title="{DynamicResource S.Options.Title}"
    Width="800"
    Height="610"
    MinWidth="680"
    MinHeight="460"
    Background="{DynamicResource Panel.Background}"
    Closing="Window_Closing"
    Icon="/Resources/Logo.ico"
    Loaded="Window_Loaded"
    SizeToContent="Width"
    SnapsToDevicePixels="True"
    UseLayoutRounding="True"
    WindowStartupLocation="CenterScreen">

    <Window.CommandBindings>
        <CommandBinding
            CanExecute="Cache_CanExecute"
            Command="{StaticResource Command.CheckCache}"
            Executed="CheckCache_Execute" />
        <CommandBinding
            CanExecute="Cache_CanExecute"
            Command="{StaticResource Command.ClearCache}"
            Executed="ClearCache_Execute" />
        <CommandBinding
            CanExecute="BrowseCache_CanExecute"
            Command="{StaticResource Command.BrowseCache}"
            Executed="BrowseCache_Execute" />
        <CommandBinding
            CanExecute="BrowseLogs_CanExecute"
            Command="{StaticResource Command.BrowseLogs}"
            Executed="BrowseLogs_Execute" />

        <CommandBinding
            CanExecute="RemoveAppDataSettings_CanExecute"
            Command="{StaticResource Command.RemoveAppDataSettings}"
            Executed="RemoveAppDataSettings_Executed" />
        <CommandBinding
            CanExecute="RemoveAppDataSettings_CanExecute"
            Command="{StaticResource Command.OpenAppDataSettings}"
            Executed="OpenAppDataSettings_Execute" />

        <CommandBinding
            CanExecute="CreateLocalSettings_CanExecute"
            Command="{StaticResource Command.CreateLocalSettings}"
            Executed="CreateLocalSettings_Execute" />
        <CommandBinding
            CanExecute="RemoveLocalSettings_CanExecute"
            Command="{StaticResource Command.OpenLocalSettings}"
            Executed="OpenLocalSettings_Execute" />
        <CommandBinding
            CanExecute="RemoveLocalSettings_CanExecute"
            Command="{StaticResource Command.RemoveLocalSettings}"
            Executed="RemoveLocalSettings_Execute" />

        <CommandBinding
            CanExecute="MoveUp_CanExecute"
            Command="{StaticResource Command.MoveUp}"
            Executed="MoveUp_Executed" />
        <CommandBinding
            CanExecute="MoveDown_CanExecute"
            Command="{StaticResource Command.MoveDown}"
            Executed="MoveDown_Executed" />
        <CommandBinding
            CanExecute="Add_CanExecute"
            Command="{StaticResource Command.Add}"
            Executed="Add_Executed" />
        <CommandBinding
            x:Name="EditCommandBinding"
            CanExecute="Remove_CanExecute"
            Command="{StaticResource Command.Edit}"
            Executed="Edit_Executed" />
        <CommandBinding
            CanExecute="Remove_CanExecute"
            Command="{StaticResource Command.Remove}"
            Executed="Remove_Executed" />

        <CommandBinding
            CanExecute="BrowseFfmpeg_CanExecute"
            Command="{StaticResource Command.BrowseFfmpeg}"
            Executed="BrowseFfmpeg_Execute" />
        <CommandBinding
            CanExecute="BrowseGifski_CanExecute"
            Command="{StaticResource Command.BrowseGifski}"
            Executed="BrowseGifski_Execute" />
        <CommandBinding
            CanExecute="BrowseSharpDx_CanExecute"
            Command="{StaticResource Command.BrowseSharpDx}"
            Executed="BrowseSharpDx_Execute" />
    </Window.CommandBindings>

    <Window.Resources>
        <c:InvertedVisibility x:Key="InvertedVisibility" />
        <c:BoolAndToVisibility x:Key="BoolAndToVisibility" />
        <c:BoolOrToVisibility x:Key="BoolOrToVisibility" />
    </Window.Resources>

    <Grid DataContext="{x:Static u:UserSettings.All}">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="40" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="3">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" MinWidth="90" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <!--  Options  -->
            <StackPanel
                x:Name="OptionsStackPanel"
                Grid.Row="0"
                Grid.RowSpan="2"
                Grid.Column="0"
                MinWidth="130"
                MaxWidth="180"
                Margin="0">
                <StackPanel.Resources>
                    <Style BasedOn="{StaticResource {x:Type n:ExtendedRadioButton}}" TargetType="{x:Type n:ExtendedRadioButton}">
                        <Setter Property="Padding" Value="2,2,2,2" />
                        <Setter Property="FontSize" Value="17" />
                        <Setter Property="FontFamily" Value="Segoe UI Semilight" />
                        <Setter Property="Cursor" Value="Hand" />
                        <Setter Property="ContentWidth" Value="24" />
                        <Setter Property="TextWrapping" Value="WrapWithOverflow" />
                        <Setter Property="HorizontalContentAlignment" Value="Left" />
                    </Style>
                </StackPanel.Resources>

                <n:ExtendedRadioButton
                    x:Name="AppRadio"
                    Icon="{StaticResource Vector.Application}"
                    Text="{DynamicResource S.Options.App}" />
                <n:ExtendedRadioButton
                    x:Name="RecorderRadio"
                    Icon="{StaticResource Vector.Record}"
                    IsChecked="True"
                    Text="{DynamicResource S.Options.Recorder}" />
                <n:ExtendedRadioButton
                    x:Name="EditorRadio"
                    Icon="{StaticResource Vector.Editor}"
                    Text="{DynamicResource S.Options.Editor}" />
                <n:ExtendedRadioButton
                    x:Name="AutomaticRadio"
                    Icon="{StaticResource Vector.Encoder}"
                    Text="{DynamicResource S.Options.Tasks}" />
                <n:ExtendedRadioButton
                    x:Name="ShortcutsRadio"
                    Icon="{StaticResource Vector.Keyboard}"
                    Text="{DynamicResource S.Options.Shortcuts}" />
                <n:ExtendedRadioButton
                    x:Name="LanguageRadio"
                    Icon="{StaticResource Vector.Translate}"
                    Text="{DynamicResource S.Options.Language}" />
                <n:ExtendedRadioButton
                    x:Name="TempRadio"
                    Icon="{StaticResource Vector.Temporary}"
                    Text="{DynamicResource S.Options.Storage}" />
                <n:ExtendedRadioButton
                    x:Name="CloudRadioButton"
                    Icon="{StaticResource Vector.Web}"
                    Text="{DynamicResource S.Options.Upload}" />
                <n:ExtendedRadioButton
                    x:Name="ExtrasRadioButton"
                    Icon="{StaticResource Vector.Extras}"
                    Text="{DynamicResource S.Options.Extras}" />
                <n:ExtendedRadioButton
                    x:Name="DonateRadio"
                    Icon="{StaticResource Vector.Money}"
                    Text="{DynamicResource S.Options.Donate}" />
                <n:ExtendedRadioButton
                    x:Name="AboutRadio"
                    Icon="{StaticResource Vector.Info}"
                    Text="{DynamicResource S.Options.About}" />
            </StackPanel>

            <n:StatusBand
                x:Name="StatusBand"
                Grid.Row="0"
                Grid.Column="1" />

            <ScrollViewer
                Grid.Row="1"
                Grid.Column="1"
                VerticalScrollBarVisibility="Auto">
                <Grid>
                    <!--  Application  -->
                    <Grid
                        x:Name="ApplicationPanel"
                        Loaded="ApplicationPanel_Loaded"
                        Visibility="{Binding IsChecked, ElementName=AppRadio, Converter={StaticResource Bool2Visibility}}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <Expander
                            Grid.Row="0"
                            Header="{DynamicResource S.Options.App.Startup}"
                            IsExpanded="True">
                            <StackPanel>
                                <WrapPanel Margin="0,0,5,5" HorizontalAlignment="Center">
                                    <Grid x:Name="StartupModeGrid">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition />
                                            <ColumnDefinition />
                                        </Grid.ColumnDefinitions>

                                        <n:ExtendedRadioButton
                                            x:Name="StartManuallyCheckBox"
                                            Grid.Column="0"
                                            Padding="5"
                                            ContentHeight="40"
                                            ContentWidth="40"
                                            Icon="{StaticResource Vector.Cursor}"
                                            IsChecked="True"
                                            Text="{DynamicResource S.Options.App.Startup.Mode.Manual}"
                                            ToolTip="{DynamicResource S.Options.App.Startup.Mode.Manual.Info}" />

                                        <n:ExtendedRadioButton
                                            x:Name="StartAutomaticallyCheckBox"
                                            Grid.Column="1"
                                            Padding="5"
                                            Checked="StartAutomaticallyCheckBox_Checked"
                                            ContentHeight="40"
                                            ContentWidth="40"
                                            Icon="{StaticResource Vector.Play}"
                                            Text="{DynamicResource S.Options.App.Startup.Mode.Automatic}"
                                            ToolTip="{DynamicResource S.Options.App.Startup.Mode.Automatic.Info}"
                                            Unchecked="StartAutomaticallyCheckBox_Unchecked" />
                                    </Grid>

                                    <Separator Width="1" Margin="3" />

                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition />
                                            <ColumnDefinition />
                                        </Grid.ColumnDefinitions>

                                        <n:ExtendedRadioButton
                                            Grid.Column="0"
                                            Padding="5"
                                            Checked="Instance_Checked"
                                            ContentHeight="40"
                                            ContentWidth="40"
                                            Icon="{StaticResource Vector.View}"
                                            IsChecked="{Binding Path=SingleInstance, Mode=TwoWay}"
                                            Text="{DynamicResource S.Options.App.Startup.Instance.Single}"
                                            ToolTip="{DynamicResource S.Options.App.Startup.Instance.Single.Info}" />
                                        <n:ExtendedRadioButton
                                            Grid.Column="1"
                                            Padding="5"
                                            Checked="Instance_Checked"
                                            ContentHeight="40"
                                            ContentWidth="40"
                                            Icon="{StaticResource Vector.Views}"
                                            IsChecked="{Binding Path=SingleInstance, Mode=TwoWay, Converter={StaticResource InvertedBool}}"
                                            Text="{DynamicResource S.Options.App.Startup.Instance.Multiple}"
                                            ToolTip="{DynamicResource S.Options.App.Startup.Instance.Multiple.Info}" />
                                    </Grid>
                                </WrapPanel>

                                <n:ExtendedCheckBox
                                    Margin="15,3,5,3"
                                    VerticalAlignment="Top"
                                    Checked="StartCheckBox_Checked"
                                    Info="{DynamicResource S.Options.App.Startup.Tray.Info}"
                                    IsChecked="{Binding Path=StartMinimized, Mode=TwoWay}"
                                    Text="{DynamicResource S.Options.App.Startup.Tray}" />

                                <Grid Margin="15,0,5,5" Visibility="{Binding StartMinimized, Converter={StaticResource InvertedBoolToVisibility}}">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" MinWidth="120" />
                                        <ColumnDefinition />
                                    </Grid.ColumnDefinitions>

                                    <TextBlock
                                        Grid.Column="0"
                                        Padding="2,0,5,0"
                                        VerticalAlignment="Center"
                                        Foreground="{DynamicResource Element.Foreground.Medium}"
                                        Text="{DynamicResource S.Options.App.Startup.Window}" />
                                    <ComboBox
                                        Grid.Column="1"
                                        MinWidth="120"
                                        VerticalAlignment="Center"
                                        SelectedIndex="{Binding Path=StartUp, Mode=TwoWay}">
                                        <ComboBoxItem Content="{DynamicResource S.Options.App.Startup.Window.Startup}" />
                                        <ComboBoxItem Content="{DynamicResource S.Options.App.Startup.Window.Recorder}" />
                                        <ComboBoxItem Content="{DynamicResource S.Options.App.Startup.Window.Webcam}" />
                                        <ComboBoxItem Content="{DynamicResource S.Options.App.Startup.Window.Board}" />
                                        <ComboBoxItem Content="{DynamicResource S.Options.App.Startup.Window.Editor}" />
                                    </ComboBox>

                                    <TextBlock
                                        Grid.Column="2"
                                        Margin="5,0,0,0"
                                        Padding="0"
                                        VerticalAlignment="Center"
                                        Foreground="{DynamicResource Element.Foreground.Gray150}"
                                        Text="{DynamicResource S.Options.App.Startup.Window.Info}"
                                        TextWrapping="WrapWithOverflow" />
                                </Grid>
                            </StackPanel>
                        </Expander>

                        <Expander
                            Grid.Row="1"
                            Header="{DynamicResource S.Options.App.Theme}"
                            IsExpanded="True">
                            <Grid Margin="15,3,5,3">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>

                                <TextBlock
                                    Grid.Column="0"
                                    Padding="2,0,5,0"
                                    VerticalAlignment="Center"
                                    Foreground="{DynamicResource Element.Foreground.Medium}"
                                    Text="{DynamicResource S.Options.App.Theme.Scheme}" />
                                <ComboBox
                                    x:Name="AppThemeComboBox"
                                    Grid.Column="1"
                                    Height="28"
                                    Padding="5,0"
                                    VerticalContentAlignment="Center"
                                    SelectedValue="{Binding Source={x:Static u:UserSettings.All}, Path=MainTheme, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                    SelectedValuePath="Tag"
                                    SelectionChanged="AppThemeComboBox_SelectionChanged">

                                    <StackPanel Orientation="Horizontal" Tag="Light">
                                        <Border
                                            Width="20"
                                            Height="20"
                                            Background="#FFFFFFFF"
                                            BorderBrush="{DynamicResource Element.Border}"
                                            BorderThickness="1,1,0,1"
                                            ToolTip="{DynamicResource S.Options.App.Theme.Scheme.Example}">
                                            <TextBlock
                                                HorizontalAlignment="Center"
                                                Foreground="Black"
                                                Text="Aa" />
                                        </Border>
                                        <Border
                                            Width="20"
                                            Height="20"
                                            Background="#FFFAFAFA"
                                            BorderBrush="{DynamicResource Element.Border}"
                                            BorderThickness="0,1,0,1"
                                            ToolTip="{DynamicResource S.Options.App.Theme.Scheme.Example}">
                                            <TextBlock
                                                HorizontalAlignment="Center"
                                                Foreground="Black"
                                                Text="Aa" />
                                        </Border>
                                        <Border
                                            Width="20"
                                            Height="20"
                                            Background="#FFF5F5F5"
                                            BorderBrush="{DynamicResource Element.Border}"
                                            BorderThickness="0,1,0,1"
                                            ToolTip="{DynamicResource S.Options.App.Theme.Scheme.Example}">
                                            <TextBlock
                                                HorizontalAlignment="Center"
                                                Foreground="Black"
                                                Text="Aa" />
                                        </Border>
                                        <Border
                                            Width="20"
                                            Height="20"
                                            Background="#FFF9F9FF"
                                            BorderBrush="{DynamicResource Element.Border}"
                                            BorderThickness="0,1,0,1"
                                            ToolTip="{DynamicResource S.Options.App.Theme.Scheme.Example}">
                                            <TextBlock
                                                HorizontalAlignment="Center"
                                                Foreground="Black"
                                                Text="Aa" />
                                        </Border>
                                        <Border
                                            Width="20"
                                            Height="20"
                                            Background="#FFFFFFFF"
                                            BorderBrush="{DynamicResource Element.Border}"
                                            BorderThickness="0,1,0,1"
                                            ToolTip="{DynamicResource S.Options.App.Theme.Scheme.Example}">
                                            <TextBlock
                                                HorizontalAlignment="Center"
                                                Foreground="Black"
                                                Text="Aa" />
                                        </Border>
                                        <Border
                                            Width="20"
                                            Height="20"
                                            Background="#FFEFEFEF"
                                            BorderBrush="{DynamicResource Element.Border}"
                                            BorderThickness="0,1,1,1"
                                            ToolTip="{DynamicResource S.Options.App.Theme.Scheme.Example}">
                                            <TextBlock
                                                HorizontalAlignment="Center"
                                                Foreground="Black"
                                                Text="Aa" />
                                        </Border>
                                        <Label
                                            Padding="10,0,5,0"
                                            VerticalAlignment="Center"
                                            VerticalContentAlignment="Center"
                                            Content="{DynamicResource S.Options.App.Theme.Scheme.Light}"
                                            Foreground="{DynamicResource Element.Foreground}" />
                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal" Tag="Medium">
                                        <Border
                                            Width="20"
                                            Height="20"
                                            Background="#FFEDEDED"
                                            BorderBrush="{DynamicResource Element.Border}"
                                            BorderThickness="1,1,0,1"
                                            ToolTip="{DynamicResource S.Options.App.Theme.Scheme.Example}">
                                            <TextBlock
                                                HorizontalAlignment="Center"
                                                Foreground="Black"
                                                Text="Aa" />
                                        </Border>
                                        <Border
                                            Width="20"
                                            Height="20"
                                            Background="#FFE3E3E3"
                                            BorderBrush="{DynamicResource Element.Border}"
                                            BorderThickness="0,1,0,1"
                                            ToolTip="{DynamicResource S.Options.App.Theme.Scheme.Example}">
                                            <TextBlock
                                                HorizontalAlignment="Center"
                                                Foreground="Black"
                                                Text="Aa" />
                                        </Border>
                                        <Border
                                            Width="20"
                                            Height="20"
                                            Background="#FFD6D6D6"
                                            BorderBrush="{DynamicResource Element.Border}"
                                            BorderThickness="0,1,0,1"
                                            ToolTip="{DynamicResource S.Options.App.Theme.Scheme.Example}">
                                            <TextBlock
                                                HorizontalAlignment="Center"
                                                Foreground="Black"
                                                Text="Aa" />
                                        </Border>
                                        <Border
                                            Width="20"
                                            Height="20"
                                            Background="#FFD7D7E4"
                                            BorderBrush="{DynamicResource Element.Border}"
                                            BorderThickness="0,1,0,1"
                                            ToolTip="{DynamicResource S.Options.App.Theme.Scheme.Example}">
                                            <TextBlock
                                                HorizontalAlignment="Center"
                                                Foreground="Black"
                                                Text="Aa" />
                                        </Border>
                                        <Border
                                            Width="20"
                                            Height="20"
                                            Background="#FFE8E8E8"
                                            BorderBrush="{DynamicResource Element.Border}"
                                            BorderThickness="0,1,0,1"
                                            ToolTip="{DynamicResource S.Options.App.Theme.Scheme.Example}">
                                            <TextBlock
                                                HorizontalAlignment="Center"
                                                Foreground="Black"
                                                Text="Aa" />
                                        </Border>
                                        <Border
                                            Width="20"
                                            Height="20"
                                            Background="#FFECECEC"
                                            BorderBrush="{DynamicResource Element.Border}"
                                            BorderThickness="0,1,1,1"
                                            ToolTip="{DynamicResource S.Options.App.Theme.Scheme.Example}">
                                            <TextBlock
                                                HorizontalAlignment="Center"
                                                Foreground="Black"
                                                Text="Aa" />
                                        </Border>
                                        <Label
                                            Padding="10,0,5,0"
                                            VerticalAlignment="Center"
                                            VerticalContentAlignment="Center"
                                            Content="{DynamicResource S.Options.App.Theme.Scheme.Medium}"
                                            Foreground="{DynamicResource Element.Foreground}" />
                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal" Tag="Dark">
                                        <Border
                                            Width="20"
                                            Height="20"
                                            Background="#FF202020"
                                            BorderBrush="{DynamicResource Element.Border}"
                                            BorderThickness="1,1,0,1"
                                            ToolTip="{DynamicResource S.Options.App.Theme.Scheme.Example}">
                                            <TextBlock
                                                HorizontalAlignment="Center"
                                                Foreground="#FFE8E8E8"
                                                Text="Aa" />
                                        </Border>
                                        <Border
                                            Width="20"
                                            Height="20"
                                            Background="#FF262626"
                                            BorderBrush="{DynamicResource Element.Border}"
                                            BorderThickness="0,1,0,1"
                                            ToolTip="{DynamicResource S.Options.App.Theme.Scheme.Example}">
                                            <TextBlock
                                                HorizontalAlignment="Center"
                                                Foreground="#FFE8E8E8"
                                                Text="Aa" />
                                        </Border>
                                        <Border
                                            Width="20"
                                            Height="20"
                                            Background="#FF2A2A2A"
                                            BorderBrush="{DynamicResource Element.Border}"
                                            BorderThickness="0,1,0,1"
                                            ToolTip="{DynamicResource S.Options.App.Theme.Scheme.Example}">
                                            <TextBlock
                                                HorizontalAlignment="Center"
                                                Foreground="#FFE8E8E8"
                                                Text="Aa" />
                                        </Border>
                                        <Border
                                            Width="20"
                                            Height="20"
                                            Background="#FF323130"
                                            BorderBrush="{DynamicResource Element.Border}"
                                            BorderThickness="0,1,0,1"
                                            ToolTip="{DynamicResource S.Options.App.Theme.Scheme.Example}">
                                            <TextBlock
                                                HorizontalAlignment="Center"
                                                Foreground="#FFE8E8E8"
                                                Text="Aa" />
                                        </Border>
                                        <Border
                                            Width="20"
                                            Height="20"
                                            Background="#FF323232"
                                            BorderBrush="{DynamicResource Element.Border}"
                                            BorderThickness="0,1,0,1"
                                            ToolTip="{DynamicResource S.Options.App.Theme.Scheme.Example}">
                                            <TextBlock
                                                HorizontalAlignment="Center"
                                                Foreground="#FFE8E8E8"
                                                Text="Aa" />
                                        </Border>
                                        <Border
                                            Width="20"
                                            Height="20"
                                            Background="#FF343434"
                                            BorderBrush="{DynamicResource Element.Border}"
                                            BorderThickness="0,1,1,1"
                                            ToolTip="{DynamicResource S.Options.App.Theme.Scheme.Example}">
                                            <TextBlock
                                                HorizontalAlignment="Center"
                                                Foreground="#FFE8E8E8"
                                                Text="Aa" />
                                        </Border>
                                        <Label
                                            Padding="10,0,5,0"
                                            VerticalAlignment="Center"
                                            VerticalContentAlignment="Center"
                                            Content="{DynamicResource S.Options.App.Theme.Scheme.Dark}"
                                            Foreground="{DynamicResource Element.Foreground}" />
                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal" Tag="VeryDark">
                                        <Border
                                            Width="20"
                                            Height="20"
                                            Background="#FF101010"
                                            BorderBrush="{DynamicResource Element.Border}"
                                            BorderThickness="1,1,0,1"
                                            ToolTip="{DynamicResource S.Options.App.Theme.Scheme.Example}">
                                            <TextBlock
                                                HorizontalAlignment="Center"
                                                Foreground="#FF696969"
                                                Text="Aa" />
                                        </Border>
                                        <Border
                                            Width="20"
                                            Height="20"
                                            Background="#FF161616"
                                            BorderBrush="{DynamicResource Element.Border}"
                                            BorderThickness="0,1,0,1"
                                            ToolTip="{DynamicResource S.Options.App.Theme.Scheme.Example}">
                                            <TextBlock
                                                HorizontalAlignment="Center"
                                                Foreground="#FF696969"
                                                Text="Aa" />
                                        </Border>
                                        <Border
                                            Width="20"
                                            Height="20"
                                            Background="#FF1A1A1A"
                                            BorderBrush="{DynamicResource Element.Border}"
                                            BorderThickness="0,1,0,1"
                                            ToolTip="{DynamicResource S.Options.App.Theme.Scheme.Example}">
                                            <TextBlock
                                                HorizontalAlignment="Center"
                                                Foreground="#FF696969"
                                                Text="Aa" />
                                        </Border>
                                        <Border
                                            Width="20"
                                            Height="20"
                                            Background="#FF222120"
                                            BorderBrush="{DynamicResource Element.Border}"
                                            BorderThickness="0,1,0,1"
                                            ToolTip="{DynamicResource S.Options.App.Theme.Scheme.Example}">
                                            <TextBlock
                                                HorizontalAlignment="Center"
                                                Foreground="#FF696969"
                                                Text="Aa" />
                                        </Border>
                                        <Border
                                            Width="20"
                                            Height="20"
                                            Background="#FF222222"
                                            BorderBrush="{DynamicResource Element.Border}"
                                            BorderThickness="0,1,0,1"
                                            ToolTip="{DynamicResource S.Options.App.Theme.Scheme.Example}">
                                            <TextBlock
                                                HorizontalAlignment="Center"
                                                Foreground="#FF696969"
                                                Text="Aa" />
                                        </Border>
                                        <Border
                                            Width="20"
                                            Height="20"
                                            Background="#FF242424"
                                            BorderBrush="{DynamicResource Element.Border}"
                                            BorderThickness="0,1,1,1"
                                            ToolTip="{DynamicResource S.Options.App.Theme.Scheme.Example}">
                                            <TextBlock
                                                HorizontalAlignment="Center"
                                                Foreground="#FF696969"
                                                Text="Aa" />
                                        </Border>
                                        <Label
                                            Padding="10,0,5,0"
                                            VerticalAlignment="Center"
                                            VerticalContentAlignment="Center"
                                            Content="{DynamicResource S.Options.App.Theme.Scheme.VeryDark}"
                                            Foreground="{DynamicResource Element.Foreground}" />
                                    </StackPanel>
                                </ComboBox>
                            </Grid>
                        </Expander>

                        <Expander
                            Grid.Row="2"
                            Header="{DynamicResource S.Options.App.Tray}"
                            IsExpanded="True">
                            <StackPanel>
                                <n:ExtendedCheckBox
                                    Margin="15,3,5,3"
                                    CheckedChanged="NotificationIconCheckBox_CheckedChanged"
                                    IsChecked="{Binding Path=ShowNotificationIcon, Mode=TwoWay}"
                                    Text="{DynamicResource S.Options.App.Tray.Show}" />
                                <n:ExtendedCheckBox
                                    Margin="30,3,5,3"
                                    IsChecked="{Binding Path=KeepOpen, Mode=TwoWay}"
                                    Text="{DynamicResource S.Options.App.Tray.LeaveOpen}"
                                    Visibility="{Binding ShowNotificationIcon, Converter={StaticResource Bool2Visibility}}" />

                                <Grid Margin="30,0,0,0" Visibility="{Binding ShowNotificationIcon, Converter={StaticResource Bool2Visibility}}">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>

                                    <!--  Left  -->
                                    <TextBlock
                                        Grid.Row="0"
                                        Grid.Column="0"
                                        Padding="2,0,3,0"
                                        VerticalAlignment="Center"
                                        Foreground="{DynamicResource Element.Foreground.Medium}"
                                        Text="{DynamicResource S.Options.App.Tray.Interactions.Left}" />
                                    <ComboBox
                                        Grid.Row="0"
                                        Grid.Column="1"
                                        MinWidth="180"
                                        VerticalAlignment="Center"
                                        SelectedIndex="{Binding Path=LeftClickAction, Mode=TwoWay}">
                                        <ComboBoxItem Content="{DynamicResource S.Options.App.Tray.Interactions.Nothing}" />
                                        <ComboBoxItem Content="{DynamicResource S.Options.App.Tray.Interactions.Open}" />
                                        <ComboBoxItem Content="{DynamicResource S.Options.App.Tray.Interactions.Toggle}" />
                                        <ComboBoxItem Content="{DynamicResource S.Options.App.Tray.Interactions.Minimize}" />
                                        <ComboBoxItem Content="{DynamicResource S.Options.App.Tray.Interactions.Restore}" />
                                    </ComboBox>

                                    <TextBlock
                                        Grid.Row="0"
                                        Grid.Column="2"
                                        Padding="5,0,3,0"
